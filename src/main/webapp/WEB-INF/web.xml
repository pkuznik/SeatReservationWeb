<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>ReservationServlet</servlet-name>
        <servlet-class>pl.polsl.seatreservationweb.servlets.ReservationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CinemaHallServlet</servlet-name>
        <servlet-class>pl.polsl.seatreservationweb.servlets.CinemaHallServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReservationServlet</servlet-name>
        <url-pattern>/ReservationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CinemaHallServlet</servlet-name>
        <url-pattern>/CinemaHallServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
